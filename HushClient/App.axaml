<Application 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HushClient"
    x:Class="HushClient.App"
    RequestedThemeVariant="Default">

    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source='avares://Olimpo.Controls/Assets/IconResources.axaml'/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>


    <Application.Styles>
        <FluentTheme />

        <StyleInclude Source="avares://Olimpo.Controls/Assets/Olimpo.Controls.Styles.axaml"/>
    </Application.Styles>
</Application>